<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp">

        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/smallCardImageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/smallCardTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/smallCardImageView"
            android:layout_margin="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="3"
            android:scrollHorizontally="true"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/smallCardDateTagView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smallCardTitleView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:text="Date"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/smallCardBookmarkView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/smallCardTitleView"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_bookmark_black_24dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>